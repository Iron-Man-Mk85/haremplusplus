{
  "root": true,
  "plugins": ["prettier"],
  "extends": [
    "eslint:recommended",
    "react-app", // including @typescript-eslint
    "react-app/jest",
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "prettier/prettier": 2,
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ]
  }
}
